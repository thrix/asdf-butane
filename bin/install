#!/bin/bash
# bin/install

set -e

VERSION="$1"
ARCH="$(uname -m)"

if [ "$ARCH" == "x86_64" ]; then
  ARCH="amd64"
fi

URL="https://github.com/coreos/butane/releases/download/${VERSION}/butane-x86_64-unknown-linux-gnu"

curl -L "$URL" -o "butane"
chmod +x "butane"
mkdir -p "${ASDF_INSTALL_PATH}/bin"
mv butane "${ASDF_INSTALL_PATH}/bin/"
